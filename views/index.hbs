<h1> Burgers! </h1>

<div class="container">
	<!--Not eaten yet-->
	<div id="not-eaten">
		<h2> Burgers That You Have Not Eaten! </h2>
		<!--Update-->
			<ul>
				{{#each burgers}}
				  {{#unless this.devoured}}
				    <li>
				      {{this.burger_name}}

				      <form action="/{{this.id}}?_method=PUT" method="POST">
				        <input type="hidden" name="devoured" value="true">
				        <button type="submit"> Devour </button>
				      </form>
				  {{/unless}}
				    </li>
				{{/each}}
			</ul>

	</div>
		<img id="burger-pic" src="/assets/img/burger.jpg" alt="Burger">
	<div>

	</div>

	<!--List those that have been devoured-->
	<div id="eaten">
		<h2> Burgers That You Have Eaten </h2>

			<ul>
				{{#each burgers}}
				  {{#if this.devoured}}
				    <li>
				      {{this.burger_name}}
				    </li>
				  {{/if}}
				{{/each}}
			</ul>
	</div>

	<!--Add Burger-->
	<!--Create-->
	<div id="add-a-burger-area">
		<h2> Add a Burger </h2>
			<form class="create-update-form" action="/" method="POST">

				<div class="form group">
				  <label for="burger-input"> Burger Name:</label>
				  <input type="text" id="burger-input" name="burger_name">
				</div>
				
				<!--Burger submit button-->
				<button type="submit" id="burger-add"> Add Burger! </button>

			</form>
	</div>
</div>











